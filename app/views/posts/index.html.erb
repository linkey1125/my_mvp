<div class="container mx-auto p-6">
    <h2 class="text-xl font-bold text-black mb-6">ユーザーの投稿一覧</h2>

    <% @posts.each do |post| %>
        <div class="border border-gray-300 p-4 rounded-lg bg-white mb-4">
            <h3 class="text-lg font-bold"><%= post.title %></h3>
            <p class="text-gray-600"><%= post.content %></p>
            <p class="text-sm text-gray-500">投稿者: <%= post.user.name %> | 投稿日: <%= post.created_at.strftime('%Y-%m-%d %H:%M') %></p>
        </div>
    <% end %>

    <% if session[:user_id] %>
        <a href="<%= new_post_path %>" class="w-full bg-[#c8a07e] text-white p-3 rounded-full hover:bg-[#b38f70] text-center">
            新規投稿する
        </a>
    <% else %>
        <p class="text-gray-500 text-center mt-4">投稿するには <%= link_to 'ログイン', login_path, class: "text-blue-500 hover:underline" %> が必要です。</p>
    <% end %>
</div>
