<header class="flex justify-between items-center p-5 bg-white shadow-md">
    <%# ロゴ画像をクリックするとトップページに遷移する %>
    <%= link_to root_path do %>
        <%= image_tag "logo_icon.png", alt: "UVtech.と ロゴ", class: "w-24 h-auto" %>
    <% end %>

    <div class="flex space-x-4">
        <%= image_tag "heart_icon.png", alt: "お気に入り", class: "w-6 h-6 hover:opacity-75" %>

        <%# ログイン状態に応じてリンクを変更 %>
    <% if logged_in? %>
        <%= link_to user_path(current_user) do %>
            <%= image_tag "user_icon.png", alt: "マイページ", class: "w-6 h-6 hover:opacity-75" %>
    <% end %>
    <% else %>
        <%= link_to login_path do %>
            <%= image_tag "user_icon.png", alt: "ログイン", class: "w-6 h-6 hover:opacity-75" %>
    <% end %>
<% end %>

    </div>
</header>

