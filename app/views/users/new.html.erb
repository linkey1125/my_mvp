<div class="flex flex-col items-center justify-center min-h-screen bg-white">
    <h2 class="text-2xl font-bold text-center mb-6 text-black">会員登録</h2>

    <%= form_with model: @user, url: users_path, local: true, class: "w-96 space-y-6" do |f| %>
        <%# ユーザー名入力欄 %>
        <%= f.text_field :name, placeholder: "ユーザー名", 
            class: "w-full border border-gray-300 rounded-full p-3 bg-white text-black placeholder-gray-400" %>

        <%# メールアドレス入力欄 %>
        <%= f.email_field :email, placeholder: "メールアドレス", 
            class: "w-full border border-gray-300 rounded-full p-3 bg-white text-black placeholder-gray-400", required: true %>

        <%# パスワード入力欄 %>
        <%= f.password_field :password, placeholder: "パスワード (6文字以上)", 
            class: "w-full border border-gray-300 rounded-full p-3 bg-white text-black placeholder-gray-400", required: true %>

        <%# パスワード確認入力欄 %>
        <%= f.password_field :password_confirmation, placeholder: "パスワード再入力", 
            class: "w-full border border-gray-300 rounded-full p-3 bg-white text-black placeholder-gray-400", required: true %>

        <%# 会員登録ボタン %>
        <%= f.submit "会員登録", class: "w-96 bg-[#C8A07E] text-white p-3 rounded-full hover:bg-[#B38F70]" %>
    <% end %>

    <a href="<%= login_path %>" class="text-sm text-gray-500 hover:text-black mt-2 block">
        ログインはこちら
    </a>
</div>
