<div class="flex flex-col items-center justify-center min-h-screen bg-white">
    <h2 class="text-2xl font-bold text-center mb-6 text-black">会員登録</h2>

    <%# 会員登録フォーム %>
    <%= form_with model: @user, url: users_path, local: true, class: "w-96 space-y-6" do |f| %>
        <%# メールアドレス入力欄 %>
        <label for="email" class="block text-sm font-medium text-black">メールアドレス <span class="text-red-500">必須</span></label>
        <%= f.email_field :email, placeholder: "メールアドレス", 
            class: "w-full border border-gray-300 rounded-full p-3 bg-white text-black placeholder-gray-400 focus:ring focus:ring-gray-400" %>

        <%# パスワード入力欄 %>
        <label for="password" class="block text-sm font-medium text-black">パスワード (半角英数字6文字以上) <span class="text-red-500">必須</span></label>
        <%= f.password_field :password, placeholder: "パスワード", 
            class: "w-full border border-gray-300 rounded-full p-3 bg-white text-black placeholder-gray-400 focus:ring focus:ring-gray-400" %>
        <p class="text-xs text-gray-500 mt-2">※半角英数及び、特殊文字 (@$¥# など) が入力可能です。</p>

        <%# 会員登録ボタン (ピンク) %>
        <%= f.submit "会員登録を完了する", 
            class: "w-full bg-[#c8a07e] text-white p-3 rounded-full hover:bg-[#b38f70]" %>
    <% end %>
</div>
